{
	"compilerOptions": {
		"jsx": "react",
		"noEmit": true,
		"module": "esnext",

		"lib": [
			"dom",
			"esnext"
		],

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,

		"sourceMap": true,
		"target": "esnext",

		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,

		"baseUrl": ".",
		"paths": {
			"@app/*": ["./src/*"],
			"@styles/*": ["./src/styles/*"]
		},
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
